/*MAIN*/
html{
  font-size: 16px;
}
body{
  font-family: 'Lato', Arial;
  letter-spacing:1.5px;
  font-size:62.5%;
  line-height:1.75em;
  font-weight:100;
}
footer{
  height:150px;
  background-color: #222;
}
footer p{
  color:#777;
  text-align:center;
  padding-top:100px;
  margin-bottom: 0px;
  font-size:1.5em;
}
section div{
  width: 100%;
}
.center-block{
  left:0;
  right:0;
  margin-left:auto;
  margin-right:auto;
}
a{
  text-decoration: none;
  color: inherit;
}
a.cta-container{
  width: 250px; /*same as CTA button below*/
}
/*BUTTONS*/
.cta {
  height: 60px;
  width: 250px;
  background-color:white;
  border: 3px solid #F6D300;
  border-radius: 4px;
  font-weight:700;
  font-size: 1.8em;
  margin-bottom: 60px;
}
.cta:hover {
  animation: fade 0.6s forwards;
}
@-webkit-keyframes fade {
  0%   { background-color: white; }
  100%   { background-color: #F6D300; }
}
@-moz-keyframes fade {
  0%   { background-color: white; }
  100%   { background-color: #F6D300; }
}
@-o-keyframes fade {
  0%   { background-color: white; }
  100%   { background-color: #F6D300; }
}
@keyframes fade {
  0%   { background-color: white; }
  100%   { background-color: #F6D300; }
}
/*HEADINGS*/
#headingBg h1{
  margin-top: 0;
  padding-left: 10%;
  font-size: 6em;
}
#headingBg h1, #headingBg h2{
  text-align:left;
}
h2{
  margin-top: 0px;
  padding-left: 10%;
  font-size: 2.0em;
}
#about h2, #services h2{
  margin-top: 120px;
  font-size: 4em;
  width:80%;
}
/* HOME */
#home { 
  background: url("<%= asset_path('posi_fitness_main_low_res.jpg') %>") 50% 0 no-repeat fixed;
  background-size:cover;
  min-height: 600px; 
  height: 600px; 
  margin: 0 auto; 
  width: 100%; 
  position: relative; 
}
#home div { 
  height: 458px; 
  position: absolute; 
  text-align: center; 
  top: 100px; 
  width: 100%; 
}
.intro-home{
  margin-bottom: 60px;
}
.intro-home{
  margin-bottom: 60px;
}
.intro-home p:nth-child(1){
  margin-top: 60px;
}
.intro-title{
  position:absolute;
}
p{
  font-size: 1.7em;
}
p{
  width:80%;
  margin-left: 10%;
  margin-bottom: 20px;
  margin-top: 20px;
  line-height:2em;
}
.no-padding{
  padding: 0px;
}
.no-padding .navbar{
  border-radius: 0px;
  padding: 10px 0px 10px;
}
.navbar-brand{
  background-size: 100% 200%;
  background-image: url("<%= asset_path('logo_image_sprite.png') %>");
  background-position: 0 60px;
  height:60px;
  width:206px;
  display:inline-block;
  margin-left: 40px;
}
.navbar-brand:hover{
  background-position: 0 0;
}
nav.navbar.navbar-inverse{
  margin-bottom: 0px;
}
.navbar-nav > li > a.menu-item{
  padding-top: 20px;
  font-size: 1.3em;
}
.navbar-nav > li > a.menu-item:hover{
  cursor: hand;
  cursor: pointer;
}
.navbar-nav > li:nth-child(1){
  padding-left: 40px;
}

/* ABOUT */
#about div{
  margin-bottom: 60px;
}

/* SERVICES */
.services-container{
  width: 80%;
  margin-left: 10%;
}
#services div{
  margin-bottom: 60px;
}

/*GET IN TOUCH*/
iframe{
  width:100%;
  min-height:600px;
}

@media screen and (max-width:768px){
  .navbar-nav > li:nth-child(1){
    padding-left: 0px;
  }
  #headingBg h1{
    padding-left: 3%;
    font-size: 4em;
  }
  h2{
    width: 60%;
    padding-left: 3%;
    font-size: 1.5em;
    text-wrap: wrap;
  }
  #services h2, #about h2{
    width:90%;
    margin-left:5%;
  }
}
@media only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min-device-pixel-ratio: 1.5){
  #services h2, #about h2{
    font-size: 2.5em;
    width:90%;
    margin-left:5%;
  }
  #services h3{
    font-size: 1.8em;
  }
  #home{
    background-size:cover;
    background-image: url("<%= asset_path('posi_fitness_main_low_res_mobile.jpg') %>") no-repeat fixed;
  }
  .home-container{
    top:80px;
  }
  
}